<UserControl x:Class="ERN9PDC.LaneDistributionSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ERN9PDC"
        mc:Ignorable="d">
    <StackPanel Orientation="Vertical">
        <ListView Margin="10" Name="lvLaneDistribution">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Location" DisplayMemberBinding="{Binding Location}" ></GridViewColumn>
                    <GridViewColumn Header="Lanes" DisplayMemberBinding="{Binding NumLanes}"></GridViewColumn>
                    <GridViewColumn Header="d (%)" DisplayMemberBinding="{Binding d}"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btnOk" Margin="10" Click="btnOk_Click">Ok</Button>
    </StackPanel>
</UserControl>